<% if user_logged_in? %>
  <% if micropost.like_user(current_user.id) %>
    <%= button_to micropost_like_path(like, tweet_id: tweet.id), method: :delete, id: "like-button", remote: true do %>
      <%= image_tag("icon_red_heart.svg") %>
      <span>
        <%= micropost.likes_counter(@likes) %>
      </span>
    <% end %>
  <% else %>
    <%= button_to micropost_likes_path(tweet), id: "like-button", remote: true do %>
      <%= image_tag("icon_heart.svg") %>
      <span>
        <%= micropost.likes_counter(@likes) %>
      </span>
    <% end %>
  <% end %>
<% else %>
  <% = image_tag("icon_heart.svg") %>
    <span>
      <%= micropost.likes_counter(@likes) %>
    </span>
<% end %>

        